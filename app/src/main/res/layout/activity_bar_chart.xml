<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.crazyma.batuanimlab.barchart.BarChartView
        android:id="@+id/barChartView"
        android:layout_width="360dp"
        android:layout_margin="24dp"
        android:layout_height="200dp"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        app:barColor="#FF3397CF"
        app:barPaddingEnd="8dp"
        app:barPaddingStart="8dp"
        app:barTextColor="#8A000000"
        app:barTextSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineColor="#1F000000"
        app:linePaddingTop="8dp"
        app:yTextPaddingStart="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>